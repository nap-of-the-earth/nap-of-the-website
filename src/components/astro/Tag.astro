---
interface Props {
  text: string;
  class?: string;
}

const { text, class: className } = Astro.props;
---

<span
  class:list={[
    "font-mono text-[0.6rem] font-normal text-text-tertiary bg-[rgba(255,255,255,0.04)] border border-border px-2.5 py-0.5 rounded-md",
    className,
  ]}
>
  {text}
</span>
